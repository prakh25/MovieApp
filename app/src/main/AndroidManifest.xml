<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prakhar.movieapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps"/>
    <uses-feature android:name="android.hardware.location.network"/>

    <application
        android:name=".MovieApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/HomeScreenTheme">
        <activity android:name=".ui.home.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.movie_detail.MovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.home.HomeActivity"/>
        </activity>

        <activity android:name=".ui.more_movies_list.MoreActivity"
            android:theme="@style/HomeScreenTheme">
        </activity>

        <activity android:name=".ui.search.SearchActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".ui.genre.GenreActivity"
            android:theme="@style/HomeScreenTheme">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.home.HomeActivity"/>
        </activity>

        <activity android:name=".ui.full_credits.FullCreditsActivity"/>

        <activity android:name=".ui.more_images.MoreImagesActivity"/>

        <activity android:name=".ui.people_detail.PeopleDetailActivity"
            android:theme="@style/DetailTheme" />

        <activity android:name=".ui.people_full_credit.PeopleFullCreditActivity" />

        <activity android:name=".ui.movie_detail.TrailerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/TrailerTheme.Translucent"/>
    </application>

</manifest>